<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screns.ForgotPasswordActivity"
    android:background="@drawable/background_starter">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/forgot__"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:background="#00FFFFFF"
        android:src="@drawable/forgotten3"
        app:layout_constraintBottom_toTopOf="@id/forgot_password_mail"
        app:layout_constraintEnd_toEndOf="@id/forgot_password_mail"
        app:layout_constraintStart_toStartOf="@id/forgot_password_mail" />


    <EditText
        android:id="@+id/forgot_password_mail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="344dp"
        android:background="@drawable/bacground_edittext"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:hint="@string/ema_l"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="#C6B4B4"
        android:transitionName="mailEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="293dp"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/layout_backgorund"
        android:text="@string/send_email"
        android:textColor="@color/white"
        android:transitionName="button"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_mail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_mail"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_mail" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Forgot your \n password?"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_mail"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_mail"
        app:layout_constraintTop_toBottomOf="@+id/forgot__" />
</androidx.constraintlayout.widget.ConstraintLayout>
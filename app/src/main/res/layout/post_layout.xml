<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#120909"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_layout_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/emptyuser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/post_layout_imageView">

            <TextView
                android:id="@+id/post_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-black"
                android:text="Yahya Alatas"
                android:textColor="#090606"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/post_layout_username"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/post_layout_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/post_layout_name"
                android:fontFamily="@font/rubikvariablevontwght"
                android:text="@yahya"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/post_layout_name"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_layout_dot"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"

                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@id/post_layout_username"

                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_layout_sinceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/post_layout_dot"
                android:fontFamily="sans-serif-thin"
                android:text="4h"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/post_layout_expanded"
                android:layout_width="23dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:background="#00816666"
                android:src="@drawable/ic_baseline_expand_more_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
               />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative2"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/post_layout_imageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/post_layout_imageView">

            <com.hendraanggrian.appcompat.widget.SocialTextView
                android:id="@+id/post_layout_imageView_postContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contextClickable="false"
                android:elegantTextHeight="false"
                android:freezesText="true"
                android:textAlignment="inherit"
                android:textAllCaps="false"
                android:textColor="#100C0C"
                android:textSize="15sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteY="19dp" />
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/post_layout_pagerView"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </androidx.viewpager2.widget.ViewPager2>

        </LinearLayout>
        <LinearLayout

            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout32"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/post_layout_imageView"
            >

            <ImageButton
                android:id="@+id/post_layout_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="#00FFFFFF"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/favorite" />

            <TextView
                android:id="@+id/post_layout_favorite_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="0"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/post_layout_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="75dp"
                android:layout_toEndOf="@id/post_layout_favorite"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/post_layout_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="0"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
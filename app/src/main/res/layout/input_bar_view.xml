<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bar"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:id="@+id/mgs_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"

            android:layout_alignParentTop="true"
            android:background="@color/colorAccent" />
        <RelativeLayout
            android:id="@+id/inputbar"

            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:src="@drawable/send"
                android:onClick="activity_post_detail_send"
                android:scaleType="fitXY"
                android:id="@+id/send"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true" />
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/activity_post_detail_msgText"
                android:background="@drawable/editbox_dialog_bkg_ios"
                android:maxLines="4"
                android:minHeight="35dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/mediaLayout"
                android:layout_toStartOf="@id/send"
                android:scrollbars="vertical"
                android:fontFamily="@font/nunito_semibold"
                android:hint="@string/try_to_write_something"
                android:textSize="14sp"
                />


            <LinearLayout
                android:id="@+id/mediaLayout"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/media"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:onClick="mediaClik"
                    android:scaleType="fitXY"
                    android:src="@drawable/add"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/audio"
                    android:layout_width="28dp"

                    android:layout_height="28dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:onClick="mediaClik"
                    android:scaleType="fitXY"
                    android:visibility="visible"

                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>